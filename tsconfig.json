{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "rootDir": "src",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "declaration": true,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}